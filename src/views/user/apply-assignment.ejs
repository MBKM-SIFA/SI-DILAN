              <form action="/assignment/apply" method="post">
                  <div class="form-group row align-items-center ml-2">
                    <label for="staticEmail" class="col-sm-4 col-form-label"
                      >Nama Institusi Pendidikan</label
                    >
                    <div class="col-sm-8">
                      <input
                        type="text"
                        class="form-control"
                        id="name"
                        value=""
                        placeholder="Masukkan Nama Institusi Pendidikan..."
                        name="institution_name"
                      />
                    </div>
                  </div>
                  <div class="form-group row align-items-center ml-2">
                    <label for="staticEmail" class="col-sm-4 col-form-label"
                      >Akreditasi</label
                    >
                    <div class="col-sm-8">
                      <div
                        class="
                          form-check form-check-inline
                          border
                          justify-content-center
                          p-1
                          mr-2
                        "
                        style="width: 70px; height: 35px; border-radius: 5px"
                      >
                        <input
                          class="form-check-input"
                          type="radio"
                          name="acreditation"
                          id="A"
                          value="A"
                          checked
                          style="
                            width: 10px;
                            transform: scale(1.3);
                            color: #198754;
                          "
                        />
                        <label class="form-check-label" for="inlineRadio1"
                          >A</label
                        >
                      </div>
                      <div
                        class="
                          form-check form-check-inline
                          border
                          p-1
                          justify-content-center
                        "
                        style="width: 70px; height: 35px; border-radius: 5px"
                      >
                        <input
                          class="form-check-input"
                          type="radio"
                          name="acreditation"
                          id="B"
                          value="B"
                          style="width: 10px; transform: scale(1.3)"
                        />
                        <label class="form-check-label" for="inlineRadio1"
                          >B</label
                        >
                      </div>
                    </div>
                  </div>
                  <div class="form-group row ml-2">
                    <label for="staticEmail" class="col-sm-4 col-form-label"
