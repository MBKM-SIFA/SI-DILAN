    <!-- Main Content -->
    <main>
        <h5 class="main-title">Detail Pengajuan <%= applications.app_type %> </h5>
        <hr>
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Data Diri</h5>
                <br>
                <form action="" >
                    <fieldset disabled>
                        <div class="form-group row">
                            <label for="title-data-diri" id="title-data-diri" class="col-sm-2 col-form-label">Nama Lengkap</label>
                            <div class="col-sm-8">
                                <input type="" class="form-control" id="detail-data-diri" value="<%= applications.name %> ">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="title-data-diri" id="title-data-diri" class="col-sm-2 col-form-label">NIP</label>
                            <div class="col-sm-8">
                                <input type="" class="form-control" id="detail-data-diri" value=" <%= applications.nip %> ">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="title-data-diri" id="title-data-diri" class="col-sm-2 col-form-label">Tempat Lahir</label>
                            <div class="col-sm-8">
                                <input type="" class="form-control" id="detail-data-diri" value="<%= applications.place_of_birth %>">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="title-data-diri" id="title-data-diri" class="col-sm-2 col-form-label">Tanggal Lahir</label>
                            <div class="col-sm-8">
                                <input type="" class="form-control" id="detail-data-diri" value="<%= applications.date_of_birth %>">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="title-data-diri" id="title-data-diri" class="col-sm-2 col-form-label">Nomor Telepon</label>
                            <div class="col-sm-8">
                                <input type="" class="form-control" id="detail-data-diri" value="<%= applications.phone %>">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="title-data-diri" id="title-data-diri" class="col-sm-2 col-form-label">Jabatan</label>
                            <div class="col-sm-8">
                                <input type="" class="form-control" id="detail-data-diri" value="<%= applications.department %>">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="title-data-diri" id="title-data-diri" class="col-sm-2 col-form-label">Pangkat / Golongan</label>
                            <div class="col-sm-8">
                                <input type="" class="form-control" id="detail-data-diri" value="<%= applications.ranks %>">
                            </div>
                        </div>
                    </fieldset>
                </form>
                <br>
            </div>
         </div>

        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Berkas Pendukung</h5>
                <br>
                <form action="/admin/verify/<%= applications.app_id %> " method="post">
                    <% for (let i = 0; i < files.length; i++) { %> 
                        <div class="form-group row align-items-center ">
                            <label for="title-data-berkas" id="title-data-berkas" class="col-sm-4 col-form-label"><%= files[i].type %> </label>
                            <div class="col-sm-6">
                                <a href="/admin/files/<%= applications.nip %>/<%= applications.app_id %>/<%= files[i].filename %>" target="_blank" rel="noopener noreferrer"><button type="button" id="detail-data-berkas" class="btn btn-outline-secondary col-sm-10" >Pratinjau Berkas</button></a>
                            </div>
                            <div class="custom-control custom-switch col-sm-2">
                                <input type="checkbox" class="custom-control-input" id="<%= files[i].files_id %>" name="valid_file" value="<%= files[i].files_id %>" <%= files[i].status == 'Valid' ? 'checked' : '' %>  >
                                <label class="custom-control-label" id="customSwitchesSesuai" for="<%= files[i].files_id %>">Sesuai Format</label>
                            </div>
                        </div>
                    <% } %> 
                <br>
            </div>
        </div>
        
         <div class="card border-0 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Status Pengajuan</h5>
                <br>
                <div class="form-group row align-items-center">
                    <label for="title-data-berkas" id="title-data-berkas" class="col-sm-4 col-form-label">Ubah Status Pengajuan</label>
                    <div class="col-sm-6">
                        <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" style="height: 45px;" name="application_status" required>
                        <option value="" disabled>Status Pengajuan</option>
                        <option value="Menunggu" <%= applications.app_status == "Menunggu" ? 'selected' : '' %> >Menunggu</option>
                        <option value="Diterima">Diterima</option>
                        <option value="Ditolak">Ditolak</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                      <label for="title-data-berkas" id="title-data-berkas" class="col-sm-4 col-form-label">Pesan Kepada Pengaju</label>
                      <div class="col-sm-6">
                        <textarea class="form-control" style="height: 90px;" type="text" placeholder="Masukkan Pesan Pada Pengaju..." name="notifications_message"></textarea>
                      </div>
                </div>
                <div class="form-group d-flex justify-content-center" id="form-confirm">
                      <button type="reset" class="btn btn-danger modal-link mr-3">Ulangi</button>
                      <button type="submit" class="btn btn-success modal-link">Simpan</button>
                </div>
            </div>
         </div>
        </form>
    </main>
