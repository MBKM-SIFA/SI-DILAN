  <!-- Main Content -->
  <main>
    <div class="card border-0 shadow-sm">
      <div class="card-body">
        <h5 class="card-title">UNGGAH INFORMASI BEASISWA</h5>
        <hr>
        <br>
        <div class="form-beasiswa">
          <form action="/posts/insert" method="post">
            <div class="form-group">
              <label class="my-1 mr-2" for="">Instansi</label>
              <select class="custom-select my-1 mr-sm-2" id="" name="institute" required>
                <option disabled>Pilih Instansi..</option>
                <option value="LPDP" <%= posts.institute == "LPDP" ? 'selected' : '' %> >LPDP</option>
                <option value="Bappenas" <%= posts.institute == "Bappenas" ? 'selected' : '' %>>Bappenas</option>
                <option value="Kemenkes" <%= posts.institute == "Kemenkes" ? 'selected' : '' %>>Kemenkes</option>
              </select>
            </div>
            <div class="form-group">
              <label for="" id="thead-form">Program Studi Yang Dibuka</label>
              <input class="form-control" type="text" placeholder="Masukkan Jurusan Yang Sedang Dibuka..."
                name="study_program" name="title" value="<%= posts.study_program || '' %> " required>
            </div>
            <div class="form-group">
              <label for="" id="thead-form">Akreditasi Fakultas / Universitas</label>
              <input class="form-control" type="text" placeholder="Masukkan Akreditasi Fakultas / Universitas..."
                name="acreditation" value="<%= posts.acreditation || '' %> " required>
            </div>
            <div class="form-group">
              <label for="" id="thead-form">Tanggal Pembukaan Pendaftaran</label>
              <input class="form-control" type="date" placeholder="Masukkan Akreditasi Fakultas / Universitas..."
                name="open_date" value="<%= posts.open_date.toISOString().substring(0, 10) || '' %>" required>
            </div>
            <div class="form-group">
              <label for="" id="thead-form">Tanggal Penutupan Pendaftaran</label>
              <input class="form-control" type="date" placeholder="Masukkan Akreditasi Fakultas / Universitas..."
                name="close_date" value="<%= posts.close_date.toISOString().substring(0, 10) || '' %>" required>
            </div>
            <div class="form-group">
              <label for="" id="head-form">Laman Informasi Beasiswa</label>
              <input class="form-control" type="text" placeholder="Masukkan Alamat URL Informasi Beasiswa ..."
                name="link" value="<%= posts.link || '' %>" required>
            </div>
            <div class="form-group" id="form-confirm">
              <button type="reset" class="btn btn-danger modal-link">Ulangi</button>
              <button type="submit" class="btn btn-success modal-link">Unggah</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </main>
  <!-- Main Content -->

