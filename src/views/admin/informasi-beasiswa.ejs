    <!-- Main Content -->
    <main>
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Riwayat Unggahan Informasi Beasiswa</h5>
                <br>
                <a href="/posts/insert"><button type="button" id="add-info" class="btn add-info btn-success modal-link">+ Tambah Informasi</button></a>
                <table class="table table-responsive-lg table-striped">
                    <thead>
                        <tr>
                        <th scope="col">No</th>
                        <th scope="col">Judul Informasi</th>
                        <th scope="col">Waktu Unggahan</th>
                        <th scope="col">Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for( let i = 0 ; i < posts.length ; i ++){ %>
                            <tr>
                                <th scope="row" style="display: flex; justify-content: center; align-items: center;"><%= i+1 %> </th>
                                <td> <%= posts[i].institute %> <br>  <b><%= posts[i].study_program %></b> </td>
                                <td> <%= posts[i].post_date.toISOString().substring(0, 10) %>  </td>
                                <td >
                                  <a href="/posts/delete/<%= posts[i].post_id %> ">
                                    <button type="button" class="btn btn-danger modal-link">Hapus</button>
                                  </a>
                                    <a href="/posts/update/<%= posts[i].post_id %> ">
                                      <button type="button" class="btn btn-success modal-link">Perbarui</button>
                                    </a> 
                                </td>
                            </tr>
                        <% } %>  
                    </tbody>
                </table>
            </div>
